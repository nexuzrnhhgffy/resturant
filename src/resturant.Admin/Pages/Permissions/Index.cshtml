@page "/Permissions"
@model PermissionsIndexModel
@{
    ViewData["Title"] = "مدیریت دسترسی‌ها";
}

<!-- PAGE-HEADER -->
<div class="page-header">
    <div class="page-leftheader">
        <h4 class="page-title">مدیریت دسترسی‌ها</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="/Management"><i class="fe fe-home"></i> مدیریت</a></li>
            <li class="breadcrumb-item active" aria-current="page">دسترسی‌ها</li>
        </ol>
    </div>
</div>
<!-- PAGE-HEADER END -->

<!-- Row -->
<div class="row row-sm">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header border-bottom">
                <h3 class="card-title">لیست دسترسی‌ها</h3>
                <div class="ms-auto">
                    <input type="text" id="searchInput" class="form-control" placeholder="جستجو..." style="width: 200px;">
                </div>
            </div>
            <div class="card-body">
                @if (Model.Permissions != null && Model.Permissions.Count > 0)
                {
                    <!-- Group by category -->
                    var grouped = Model.Permissions.GroupBy(p => p.Category ?? "بدون دسته‌بندی").ToList();

                    @foreach (var group in grouped)
                    {
                        <div class="mb-4">
                            <h5 class="mb-3 text-primary">
                                <i class="fe fe-folder"></i> @group.Key
                            </h5>
                            <div class="table-responsive">
                                <table class="table table-hover table-bordered mb-0">
                                    <thead class="table-light">
                                        <tr>
                                            <th>کد دسترسی</th>
                                            <th>توضیحات</th>
                                            <th>دسته‌بندی</th>
                                            <th>وضعیت استفاده</th>
                                        </tr>
                                    </thead>
                                    <tbody>
                                        @foreach (var permission in group)
                                        {
                                            <tr>
                                                <td>
                                                    <span class="badge badge-primary-light">@permission.PermissionCode</span>
                                                </td>
                                                <td>@permission.Description</td>
                                                <td>
                                                    <span class="badge badge-info-light">@permission.Category</span>
                                                </td>
                                                <td>
                                                    <span class="badge badge-success-light">فعال</span>
                                                </td>
                                            </tr>
                                        }
                                    </tbody>
                                </table>
                            </div>
                        </div>
                    }
                }
                else
                {
                    <div class="text-center py-5">
                        <i class="fe fe-inbox fs-40 text-muted mb-3"></i>
                        <p class="text-muted">دسترسی یافت نشد</p>
                    </div>
                }
            </div>
        </div>
    </div>
</div>
<!-- Row -->

<!-- Detailed Permissions Table -->
<div class="row row-sm mt-3">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header border-bottom">
                <h3 class="card-title">جامع‌ترین دسترسی‌ها</h3>
            </div>
            <div class="card-body">
                <div class="table-responsive">
                    <table class="table table-striped table-bordered">
                        <thead class="table-dark">
                            <tr>
                                <th>#</th>
                                <th>کد دسترسی</th>
                                <th>توضیحات</th>
                                <th>دسته‌بندی</th>
                                <th>سطح دسترسی</th>
                            </tr>
                        </thead>
                        <tbody>
                            @{
                                int index = 1;
                            }
                            @foreach (var permission in (Model.Permissions ?? Enumerable.Empty<PermissionDto>()).OrderBy(p => p.Category))
                            {
                                <tr>
                                    <td><span class="badge badge-secondary">@index</span></td>
                                    <td>
                                        <code>@permission.PermissionCode</code>
                                    </td>
                                    <td>@permission.Description</td>
                                    <td>
                                        <span class="badge badge-info">@permission.Category</span>
                                    </td>
                                    <td>
                                        @if (permission.PermissionCode.Contains("manage", StringComparison.OrdinalIgnoreCase) || 
                                             permission.PermissionCode.Contains("admin", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge badge-danger">مدیریت</span>
                                        }
                                        else if (permission.PermissionCode.Contains("create", StringComparison.OrdinalIgnoreCase) ||
                                                 permission.PermissionCode.Contains("edit", StringComparison.OrdinalIgnoreCase) ||
                                                 permission.PermissionCode.Contains("delete", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge badge-warning">ویرایش</span>
                                        }
                                        else if (permission.PermissionCode.Contains("view", StringComparison.OrdinalIgnoreCase) ||
                                                 permission.PermissionCode.Contains("read", StringComparison.OrdinalIgnoreCase))
                                        {
                                            <span class="badge badge-info">مشاهده</span>
                                        }
                                        else
                                        {
                                            <span class="badge badge-secondary">سایر</span>
                                        }
                                    </td>
                                </tr>
                                index++;
                            }
                        </tbody>
                    </table>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Row -->

@section Scripts {
    <script>
        $('#searchInput').on('keyup', function () {
            var value = $(this).val().toLowerCase();
            $('table tbody tr').filter(function () {
                $(this).toggle($(this).text().toLowerCase().indexOf(value) > -1)
            });
        });
    </script>
}
