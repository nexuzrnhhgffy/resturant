@page "/Management"
@model ManagementIndexModel
@{
    ViewData["Title"] = "مدیریت سیستم";
}

<!-- PAGE-HEADER -->
<div class="page-header">
    <div class="page-leftheader">
        <h4 class="page-title">مدیریت سیستم</h4>
        <ol class="breadcrumb">
            <li class="breadcrumb-item"><a href="javascript:void(0)"><i class="fe fe-home"></i> صفحه اصلی</a></li>
            <li class="breadcrumb-item active" aria-current="page">مدیریت</li>
        </ol>
    </div>
</div>
<!-- PAGE-HEADER END -->

<!-- Row -->
<div class="row row-sm">
    <!-- کاربران -->
    <div class="col-lg-3 col-md-6 col-xl-3">
        <div class="card overflow-hidden">
            <div class="card-body">
                <div class="d-flex align-items-end justify-content-between">
                    <div>
                        <h6 class="card-title mb-0">کاربران کل</h6>
                        <span class="d-block text-muted fs-12 mt-1">تعداد کاربران ثبت‌شده</span>
                    </div>
                    <span class="fs-40 text-primary font-weight-bold">@Model.Summary.TotalUsers</span>
                </div>
                <div class="mt-3">
                    <span class="badge badge-success-light">فعال: @Model.Summary.ActiveUsers</span>
                    <span class="badge badge-danger-light">غیرفعال: @Model.Summary.InactiveUsers</span>
                </div>
            </div>
        </div>
    </div>

    <!-- نقش‌ها -->
    <div class="col-lg-3 col-md-6 col-xl-3">
        <div class="card overflow-hidden">
            <div class="card-body">
                <div class="d-flex align-items-end justify-content-between">
                    <div>
                        <h6 class="card-title mb-0">نقش‌ها</h6>
                        <span class="d-block text-muted fs-12 mt-1">نقش‌های سیستم</span>
                    </div>
                    <span class="fs-40 text-info font-weight-bold">@Model.Summary.TotalRoles</span>
                </div>
                <div class="mt-3">
                    <span class="badge badge-info-light">فعال: @Model.Summary.ActiveRoles</span>
                </div>
            </div>
        </div>
    </div>

    <!-- دسترسی‌ها -->
    <div class="col-lg-3 col-md-6 col-xl-3">
        <div class="card overflow-hidden">
            <div class="card-body">
                <div class="d-flex align-items-end justify-content-between">
                    <div>
                        <h6 class="card-title mb-0">دسترسی‌ها</h6>
                        <span class="d-block text-muted fs-12 mt-1">دسترسی‌های سیستم</span>
                    </div>
                    <span class="fs-40 text-warning font-weight-bold">@Model.Summary.TotalPermissions</span>
                </div>
                <div class="mt-3">
                    <span class="badge badge-warning-light">فعال</span>
                </div>
            </div>
        </div>
    </div>

    <!-- کل خریدها -->
    <div class="col-lg-3 col-md-6 col-xl-3">
        <div class="card overflow-hidden">
            <div class="card-body">
                <div class="d-flex align-items-end justify-content-between">
                    <div>
                        <h6 class="card-title mb-0">کل خریدها</h6>
                        <span class="d-block text-muted fs-12 mt-1">مجموع فروخت</span>
                    </div>
                    <span class="fs-40 text-success font-weight-bold">@Model.Summary.TotalPurchases.ToString("N0")</span>
                </div>
                <div class="mt-3">
                    <span class="badge badge-success-light">فعلی</span>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Row -->

<!-- Row -->
<div class="row row-sm">
    <div class="col-lg-12">
        <div class="card">
            <div class="card-header border-bottom">
                <h3 class="card-title">بخش‌های مدیریت</h3>
            </div>
            <div class="card-body">
                <div class="row">
                    <div class="col-md-6 col-lg-3 mb-3">
                        <div class="card border">
                            <div class="card-body text-center">
                                <div class="mb-2">
                                    <i class="fe fe-users fs-40 text-primary"></i>
                                </div>
                                <h6 class="card-title">مدیریت کاربران</h6>
                                <p class="text-muted text-sm">ایجاد، ویرایش و حذف کاربران</p>
                                <a href="/Users" class="btn btn-primary btn-sm">ورود</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-3 mb-3">
                        <div class="card border">
                            <div class="card-body text-center">
                                <div class="mb-2">
                                    <i class="fe fe-shield fs-40 text-info"></i>
                                </div>
                                <h6 class="card-title">مدیریت نقش‌ها</h6>
                                <p class="text-muted text-sm">ایجاد و مدیریت نقش‌های سیستم</p>
                                <a href="/Roles" class="btn btn-info btn-sm">ورود</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-3 mb-3">
                        <div class="card border">
                            <div class="card-body text-center">
                                <div class="mb-2">
                                    <i class="fe fe-check-square fs-40 text-success"></i>
                                </div>
                                <h6 class="card-title">مدیریت دسترسی‌ها</h6>
                                <p class="text-muted text-sm">اختصاص دسترسی‌ها به نقش‌ها</p>
                                <a href="/Permissions" class="btn btn-success btn-sm">ورود</a>
                            </div>
                        </div>
                    </div>

                    <div class="col-md-6 col-lg-3 mb-3">
                        <div class="card border">
                            <div class="card-body text-center">
                                <div class="mb-2">
                                    <i class="fe fe-lock fs-40 text-warning"></i>
                                </div>
                                <h6 class="card-title">اختصاص نقش‌ها</h6>
                                <p class="text-muted text-sm">اختصاص نقش‌ها به کاربران</p>
                                <a href="/Users" class="btn btn-warning btn-sm">ورود</a>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
</div>
<!-- Row -->

@section Scripts {
    <script>
        $(document).ready(function () {
            console.log('مدیریت سیستم بارگیری شد');
        });
    </script>
}
