@page
@model resturant.Web.Pages.IndexModel
@{
    ViewData["Title"] = "Home";
}

<!-- Hero Section -->
<section class="hero-section bg-primary text-white py-5">
    <div class="container">
        <div class="row align-items-center min-vh-50">
            <div class="col-lg-6">
                <h1 class="display-4 fw-bold">Welcome to resturant</h1>
                <p class="lead">Experience culinary excellence with our innovative restaurant management system. Order online, reserve tables, and track your deliveries in real-time.</p>
                <div class="mt-4">
                    <a href="/Menu" class="btn btn-light btn-lg me-3">
                        <i class="fas fa-utensils me-2"></i>View Menu
                    </a>
                    <a href="/Reservation/Create" class="btn btn-outline-light btn-lg">
                        <i class="fas fa-calendar-alt me-2"></i>Book Table
                    </a>
                </div>
            </div>
            <div class="col-lg-6 text-center">
                <img src="https://images.unsplash.com/photo-1517248135467-4c7edcad34c4?w=600" alt="Restaurant" class="img-fluid rounded shadow-lg">
            </div>
        </div>
    </div>
</section>

<!-- Features Section -->
<section class="py-5">
    <div class="container">
        <div class="row g-4">
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-primary text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-mobile-alt fa-2x"></i>
                        </div>
                        <h5>Easy Online Ordering</h5>
                        <p class="text-muted">Order your favorite dishes from the comfort of your home with our easy-to-use online ordering system.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-success text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-clock fa-2x"></i>
                        </div>
                        <h5>Real-Time Tracking</h5>
                        <p class="text-muted">Track your order in real-time from the kitchen to your doorstep. Know exactly when your food arrives.</p>
                    </div>
                </div>
            </div>
            <div class="col-md-4">
                <div class="card h-100 border-0 shadow-sm">
                    <div class="card-body text-center p-4">
                        <div class="feature-icon bg-warning text-white rounded-circle d-inline-flex align-items-center justify-content-center mb-3" style="width: 80px; height: 80px;">
                            <i class="fas fa-award fa-2x"></i>
                        </div>
                        <h5>Loyalty Rewards</h5>
                        <p class="text-muted">Earn points with every order and unlock exclusive rewards and discounts as a valued customer.</p>
                    </div>
                </div>
            </div>
        </div>
    </div>
</section>

<!-- Popular Items Section -->
<section class="py-5 bg-light">
    <div class="container">
        <div class="text-center mb-5">
            <h2 class="fw-bold">Popular Dishes</h2>
            <p class="text-muted">Discover our most loved dishes</p>
        </div>
        <div class="row g-4">
            @foreach (var item in Model.PopularItems.Take(4))
            {
                <div class="col-md-3">
                    <div class="card h-100 border-0 shadow-sm">
                        <img src="@item.ImageUrl" class="card-img-top" alt="@item.ItemName" style="height: 200px; object-fit: cover;">
                        <div class="card-body">
                            <h6 class="card-title">@item.ItemName</h6>
                            <p class="card-text text-primary fw-bold">$@item.Price.ToString("F2")</p>
                            <a href="/Menu/Detail/@item.MenuItemId" class="btn btn-outline-primary btn-sm">View Details</a>
                        </div>
                    </div>
                </div>
            }
        </div>
        <div class="text-center mt-4">
            <a href="/Menu" class="btn btn-primary">
                <i class="fas fa-book-open me-2"></i>View Full Menu
            </a>
        </div>
    </div>
</section>

