@page
@model resturant.Web.Pages.Menu.IndexModel
@{
    ViewData["Title"] = "Menu";
}

<div class="container py-5">
    <div class="row">
        <!-- Sidebar Categories -->
        <div class="col-lg-3">
            <div class="card border-0 shadow-sm mb-4">
                <div class="card-header bg-primary text-white">
                    <h5 class="mb-0"><i class="fas fa-list me-2"></i>Categories</h5>
                </div>
                <div class="card-body p-0">
                    <ul class="list-group list-group-flush">
                        @foreach (var category in Model.Categories)
                        {
                            <li class="list-group-item">
                                <a href="#category-@category.CategoryId" class="text-decoration-none text-dark">
                                    @category.Name <span class="badge bg-secondary float-end">@category.Items.Count</span>
                                </a>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </div>
        
        <!-- Menu Items -->
        <div class="col-lg-9">
            @foreach (var category in Model.Categories)
            {
                <div id="category-@category.CategoryId" class="mb-5">
                    <h3 class="border-bottom pb-2 mb-4">
                        <i class="fas fa-utensils text-primary me-2"></i>@category.Name
                    </h3>
                    <div class="row g-4">
                        @foreach (var item in category.Items)
                        {
                            <div class="col-md-4">
                                <div class="card h-100 border-0 shadow-sm menu-item">
                                    <img src="@item.ImageUrl" class="card-img-top" alt="@item.ItemName" style="height: 180px; object-fit: cover;">
                                    <div class="card-body">
                                        <h6 class="card-title">@item.ItemName</h6>
                                        <p class="card-text small text-muted">@(item.Description?.Length > 60 ? item.Description.Substring(0, 60) + "..." : item.Description)</p>
                                        <div class="d-flex justify-content-between align-items-center">
                                            <span class="text-primary fw-bold">$@item.Price.ToString("F2")</span>
                                            <button class="btn btn-primary btn-sm add-to-cart" data-id="@item.MenuItemId">
                                                <i class="fas fa-plus me-1"></i>Add
                                            </button>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        }
                    </div>
                </div>
            }
        </div>
    </div>
</div>

@section Scripts {
<script>
    $(document).ready(function() {
        $('.add-to-cart').click(function() {
            const itemId = $(this).data('id');
